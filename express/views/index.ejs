<!DOCTYPE html>
<html>
  <head>
    <title>To Do</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      .completed {
        opacity: 0.3;
        text-decoration: line-through;
      }
    </style>
  </head>
  <body>
    <h1>To Do</h1>
    
    <% if (tasks.length > 0) { %>
      <ol>
      <% for (let task of tasks ) {
        %>
        <li>
          <a href="/complete-task?id=<%= task.id %>">[Completar]</a>
          <a href="/uncomplete-task?id=<%= task.id %>">[Descompletar]</a>
          <a href="/remove-task?id=<%= task.id %>">[Eliminar]</a>
          <span class="<%= task.status %>"><%= task.text %></span>
        </li>
        <%
      }
      %>
      </ol>
      <%
    } else {
      %>
      <p>No hay items</p>
      <%
    } %>

    <form method="POST" action="/add-task">
      <input type="text" name="text">
      <button type="submit">Agregar</button>
    </form>
  </body>
</html>
